<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhotoTextTranslator.TakePhoto">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Button Text="Take photo" Clicked="Button_Clicked" Margin="20,20,20,20"/>
            <StackLayout>
                <Label x:Name="picSentence" HorizontalTextAlignment="Center" />
                <Image x:Name="textPic" Aspect="AspectFit" />
            </StackLayout>            
        </StackLayout>        
    </ContentPage.Content>
</ContentPage>